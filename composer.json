{
  "name": "showheroes/php-pulse",
  "keywords": ["dapulse", "api", "monday.com"],
  "description": "A wrapper for working with the monday.com (formerly known as DaPulse) API v2",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
  },
  "autoload": {
    "psr-4": {
      "ShowHeroes\\DaPulse\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Vladimir Jimenez",
      "homepage": "https://allejo.io",
      "role": "Project Maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/allejo/PhpPulse/issues",
    "irc": "irc://irc.freenode.net/sujevo",
    "wiki": "https://github.com/allejo/PhpPulse/wiki",
    "source": "https://github.com/allejo/PhpPulse"
  },
  "scripts": {
    "build": [
      "composer install --no-dev",
      "phpab -p -o phppulse-$1.phar --bzip2 src/"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.4-dev"
    }
  }
}
